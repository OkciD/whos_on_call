{
    "server": {
        "listenAddr": ":8080",
        "shutdownTimeout": "10s"
    },
    "logger": {
        "level": "trace",
        "format": "text"
    },
    "db": {
        "driver": "sqlite3",
        "dsn": "file:build/dev/db/db.sqlite3",
        "maxIdleConns": 2,
        "maxOpenConns": 3,
        "connMaxLifetime": "5m",
        "connMaxIdleTime": "3m",
        "pingTimeout": "1s",

        "stats": {
            "enabled": true,
            "tickerDuration": "10s"
        }
    }
}
